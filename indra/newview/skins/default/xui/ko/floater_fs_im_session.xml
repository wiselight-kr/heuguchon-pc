<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  positioning="centered"
  background_visible="true"
  default_tab_group="1"
  show_title="true"
  follows="all"
  height="332"
  layout="topleft"
  left="0"
  name="panel_im"
  top="0"
  can_dock="false"
  can_minimize="true"
  can_close="true"
  visible="false"
  width="394"
  can_resize="true"
  min_width="250"
  save_rect="true"
  min_height="150">
    <floater.string
     name="participant_added"
     value="[NAME] 대화에 초대되었습니다"/>
    <floater.string
     name="multiple_participants_added"
     value="[NAME] 대화에 초대되었습니다."/>

  <layout_stack
    border_size="0"
    animate="false"
    follows="top|left|right"
    clip="false"
    height="20"
    right="-3"
    left_pad="0"
    layout="topleft"
    orientation="horizontal"
    name="ls_control_panel"
    top="2"
    left="3">
    <layout_panel
      auto_resize="false"
      user_resize="false"
      name="slide_panel"
      top="0"
      layout="topleft"
      height="20"
      width="37"
      follows="left|top">
       <button
        height="20"
        follows="left|top"
        top="0"
        left_delta="2"
        image_overlay="TabIcon_Open_Off"
        image_hover_unselected="Toolbar_Middle_Over"
        image_selected="Toolbar_Middle_Selected"
        image_unselected="Toolbar_Middle_Off"
        layout="topleft"
        width="24"
        name="slide_left_btn" />
      <button
       height="20"
       follows="left|top"
       top="0"
       left_delta="0"
       image_overlay="TabIcon_Close_Off"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       width="24"
       name="slide_right_btn" />
      <icon
        follows="left|right"
        image_name="Toolbar_Middle_Off"
        left_pad="2"
        name="dummy_icon_slider"
        top="0"
        height="20"
        width="9"/>
    </layout_panel>
    
    <layout_panel
      name="gprofile_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
       <button
        name="group_info_btn"
        follows="left|top"
        top="0"
        height="20"
        width="24"
        left_delta="2"
        image_overlay="profile_icon_24x24"
        image_hover_unselected="Toolbar_Middle_Over"
        image_selected="Toolbar_Middle_Selected"
        image_unselected="Toolbar_Middle_Off"
        tool_tip="이 그룹의 프로필 표시">
         <button.commit_callback
          function="IMSession.Menu.Action"
          parameter="group_info"/>
        </button>
    </layout_panel>
    
    <layout_panel
      name="profile_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       name="view_profile_btn"
       follows="left|top"
       top="0"
       height="20"
       width="24"
       left_delta="2"
       image_overlay="profile_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="이 거주자의 프로필 표시">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="show_profile"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="friend_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       top="0"
       left_delta="2"
       image_overlay="friends_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="이 거주자를 친구로 추가"
       name="add_friend_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="add_friend"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="tp_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="33"
      follows="left|top">
      <menu_button
       menu_filename="menu_fs_im_teleport.xml"
       follows="top|left"
       height="20"
       image_overlay="teleport_menu"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       layout="topleft"
       left_delta="2"
       name="teleport_btn"
       tool_tip="순간이동 제안 혹은 요청"
       top="0"
       width="31" />
    </layout_panel>

    <layout_panel
      name="share_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       top="0"
       height="20"
       left_delta="2"
       image_overlay="gift_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="이 거주자에게 항목 보내기"
       name="share_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="share"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="pay_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       top="0"
       height="20"
       left_delta="2"
       image_overlay="sale_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="이 거주자에게 송금"
       name="pay_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="pay"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="call_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="2"
       image_overlay="call_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="이 채팅에 음성 추가"
       name="call_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="call"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="end_call_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="2"
       image_overlay="call_end_icon_24x24"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="음성전화 종료"
       name="end_call_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="end_call"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="voice_ctrls_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="2"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="Voice Properties"
       image_overlay="VoicePTT_Off"
       name="voice_ctrls_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="volume"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="im_history_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="2"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="대화의 과거 대화 내용 열기."
       image_overlay="Chat_History"
       name="im_history_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="history"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="add_participant_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       follows="left|top"
       top="0"
       height="20"
       left_delta="2"
       image_overlay="Conv_toolbar_add_person"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="대화에 사용자 추가"
       name="add_participant_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="add_participant"/>
      </button>
    </layout_panel>

    <layout_panel
     name="send_sysinfo_btn_panel"
     auto_resize="false"
     user_resize="false"
     top="0"
     layout="topleft"
     height="20"
     width="26"
     follows="left|top">
     <button
     follows="left|top"
     height="20"
     left_delta="2"
     image_hover_unselected="Toolbar_Middle_Over"
     image_selected="Toolbar_Middle_Selected"
     image_unselected="Toolbar_Middle_Off"
     tool_tip="시스템 정보 전송"
     image_overlay="Info_Off"
     name="send_sysinfo_btn"
     top="0"
     width="24" />
    </layout_panel>

    <layout_panel
      name="lp_options_btn"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <menu_button
       menu_filename="menu_fs_chat_options.xml"
       follows="left|top"
       top="0"
       width="24"
       height="20"
       left_delta="2"
       image_overlay="Conv_toolbar_sort"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="채팅 옵션"
       name="chat_options_btn"/>
    </layout_panel>
    <layout_panel
      name="lp_chat_search_btn"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="26"
      follows="left|top">
      <button
       name="chat_search_btn"
       follows="left|top"
       top="0"
       width="24"
       height="20"
       left_delta="2"
       image_hover_unselected="Toolbar_Middle_Over"
       image_selected="Toolbar_Middle_Selected"
       image_unselected="Toolbar_Middle_Off"
       tool_tip="채팅 검색"
       image_overlay="Script_Search"/>
    </layout_panel>

  <!-- Checkbox for FS prefix on support groups -->
    <layout_panel
      name="support_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="115"
      follows="left|top">
      <icon
        follows="left|right"
        image_name="Toolbar_Middle_Off"
        left="2"
        name="dummy_icon_support_group"
        top="0"
        height="20"
        width="113"/>
      <check_box
       control_name="FSSupportGroupChatPrefix3"
       follows="left|top"
       height="19"
       label="Specify version"
       layout="topleft"
       top="0"
       left_delta="5"
       name="FSSupportGroupChatPrefix_toggle"
       tool_tip="현재 뷰어 버전, 뷰어 스킨, 운영 체제 및 RLVA 상태를 이 그룹에 보낸 메시지 전면에 추가함으로써 지원 담당자가 문제를 올바르게 진단하고 질문에 대한 답변의 정확도를 향상시킵니다"
       width="110" />
  </layout_panel>
    <layout_panel
      name="testing_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      width="105"
      follows="left|top">
      <icon
        follows="left|right"
        image_name="Toolbar_Middle_Off"
        left="2"
        name="dummy_icon_support_group_testing"
        top="0"
        height="20"
        width="103"/>
      <check_box
       control_name="FSSupportGroupChatPrefixTesting"
       follows="left|top"
       height="19"
       label="Specify build"
       layout="topleft"
       top="0"
       left_delta="5"
       name="FSSupportGroupChatPrefixTesting_toggle"
       tool_tip="현재 뷰어 버전, 뷰어 스킨, 운영 체제 및 RLVA 상태를 이 그룹에 보낸 메시지 전면에 추가합니다. 이 기능은 지원 담당자가 문제를 올바르게 진단하고 질문에 대한 답변을 정확하게 하는 데 도움이 됩니다. (지원 그룹과는 별개입니다)"
       width="100" />
  </layout_panel>
  <!-- END: FS Prefix -->
    <layout_panel
      name="lp_bar"
      auto_resize="true"
      user_resize="false"
      top="0"
      layout="topleft"
      height="20"
      follows="left|top|right">
      <icon
        follows="left|right"
        image_name="Toolbar_Middle_Off"
        left="2"
        name="dummy_icon"
        top="0"
        height="20"
        right="-1"/>
    </layout_panel>
  </layout_stack>

  <layout_stack
    tab_group="1"
    default_tab_group="2"
    animate="false"
    follows="all"
    height="308"
    width="394"
    layout="topleft"
    orientation="horizontal"
    name="chat_stack"
    top="22"
    left="0">
    <layout_panel
      name="im_control_panel_holder"
      min_width="115"
      width="150"
      height="320"
      auto_resize="false"
      user_resize="true">
      <panel
      name="panel_im_control_panel"
      layout="topleft"
      height="320"
      width="150"
      follows="all"/>
    </layout_panel>
    <layout_panel
      tab_group="2"
      name="panel_im_control_lp"
      left="0"
      top="0"
      bottom="-1"
      right="0"
      user_resize="true">
      <layout_stack
        default_tab_group="3"
        animate="false"
        follows="all"
        height="304"
        width="394"
        layout="topleft"
        orientation="vertical"
        name="im_panels"
        top="4"
        left="0"
        right="0">
        <layout_panel
          name="chat_holder">
          <fs_chat_history
          font="SansSerifSmall"
          follows="all"
          name="chat_history"
          parse_highlights="true"
          parse_urls="true"
          right="-4"
          left="0"
          top="0"
          bottom="-1" />
        </layout_panel>
        <layout_panel
          height="20"
          visible="false"
          auto_resize="false"
          user_resize="false"
          name="unread_messages_holder">
          <icon
            follows="left|right"
            image_name="Toolbar_Middle_Off"
            left="3"
            name="unread_messages_background"
            top="0"
            height="20"
            right="-4"/>
          <text
            type="string"
            length="1"
            follows="left|top|right"
            font="SansSerif"
            layout="topleft"
            name="unread_messages_text"
            right="-4"
            left="6"
            height="14"
            bottom="-3">
            읽지 않은 메세지: [NUM]
          </text>
        </layout_panel>
        <layout_panel
          tab_group="3"
          top_delta="0"
          height="26"
          bottom="-1"
          auto_resize="false"
          name="chat_layout_panel">
          <layout_stack
            animate="false"
            follows="all"
            orientation="horizontal"
            name="input_panels"
            top="0"
            bottom="-2"
            left="0"
            right="-1">
            <layout_panel
              name="input_editor_layout_panel"
              auto_resize="true"
              user_resize="false"
              top="0"
              bottom="-1">
              <chat_editor
              layout="topleft"
              expand_lines_count="5"
              follows="left|right|bottom"
              font="SansSerifSmall"
              height="20"
              is_expandable="true"
              text_tentative_color="TextFgTentativeColor"
              name="chat_editor"
              max_length="3070"
              spellcheck="true"
              top="1"
              bottom="-1"
              left="4"
              right="-3"
              wrap="true" />
            </layout_panel>
            <layout_panel
              visibility_control="FSShowIMSendButton"
              auto_resize="false"
              user_resize="false"
              name="input_button_layout_panel"
              width="85"
              top="0"
              bottom="-1">
              <button
              layout="topleft"
              left="1"
              right="-1"
              bottom="24"
              height="24"
              follows="left|right|bottom"
              name="send_chat"
              label="전송"
              tool_tip="IM 전송" />
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
  </layout_stack>
</floater>
