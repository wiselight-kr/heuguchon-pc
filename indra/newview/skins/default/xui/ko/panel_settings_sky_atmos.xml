<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
        border="true"
        follows="all"
        label="분위기 &amp; 빛"
        layout="topleft"
        left="0"
        name="panel_settings_sky_atmos"
        top="0">
    <layout_stack
            name="main_ls"
            follows="all"
            layout="topleft"
            left="5"
            top="5"
            right="-5"
            bottom="-5"
            orientation="vertical">
        <layout_panel
                name="top_lp"
                border="true"
                bevel_style="in"
                auto_resize="false"
                user_resize="false"
                visible="true"
                height="75">

            <text
                    name="ambient_color_label"
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_pad="15"
                    top_pad="15"
                    width="100">
                은은한 색깔:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="37"
                    label_height="0"
                    layout="topleft"
                    left_delta="0"
                    name="ambient_light"
                    top_pad="5"
                    width="60" />
            <text
                    name="blue_horizon_label"
                    follows="left"
                    height="10"
                    layout="topleft"
                    left_delta="110"
                    top_delta="-15"
                    width="100">
                파란 지평선:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="37"
                    label_height="0"
                    layout="topleft"
                    left_delta="0"
                    name="blue_horizon"
                    top_pad="5"
                    width="60" />
            <text
                    name="blue_density_label"
                    follows="left"
                    height="10"
                    layout="topleft"
                    left_delta="110"
                    top_delta="-15"
                    width="100">
                파란 밀도:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="37"
                    label_height="0"
                    layout="topleft"
                    left_delta="0"
                    name="blue_density"
                    top_pad="5"
                    width="60" />
        </layout_panel>
        <layout_panel
                name="bottom_lp"
                border="true"
                bevel_style="in"
                auto_resize="true"
                user_resize="false"
                visible="true">
            <layout_stack name="atmosphere1"
                    left="5"
                    top="5"
                    right="-5"
                    bottom="-5"
                    follows="left|top|right|bottom"
                    orientation="hoizontal">
                <layout_panel
                        name="left_lp"
                        border="false"
                        bevel_style="in"
                        auto_resize="true"
                        user_resize="false"
                        visible="true"
                        min_width="225">
                    <text
                            name="haze_horizon_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="10"
                            width="100">
                        안개 지평선:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0"
                            max_val="5"
                            name="haze_horizon"
                            top_delta="0"
                            width="207"
                            can_edit_text="true"/>
                    <text
                            name="haze_density_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        안개 밀도:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0"
                            max_val="5"
                            name="haze_density"
                            top_delta="0"
                            width="207"
                            can_edit_text="true"/>
                    <text
                            name="moisture_level_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        수분 레벨:
                    </text>
                     <slider
                            decimal_digits="3"
                            follows="left|top"
                            height="14"
                            increment="0.001"
                            initial_value="0"
                            left_pad="5"
                            top_delta="0"
                            layout="topleft"
                            min_val="0"
                            max_val="1"
                            name="moisture_level"
                            width="207"
                            can_edit_text="true"/>
                    <text
                            name="droplet_radius_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        물방울 반지름:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="14"
                            increment="0.01"
                            initial_value="0"
                            left_pad="5"
                            top_delta="0"
                            layout="topleft"
                            min_val="5.0"
                            max_val="1000.0"
                            name="droplet_radius"
                            width="207"
                            can_edit_text="true"/>
                    <text
                            name="ice_level_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        얼음 레벨:
                    </text>
                    <slider
                            decimal_digits="3"
                            follows="left|top"
                            height="14"
                            increment="0.001"
                            initial_value="0"
                            left_pad="5"
                            layout="topleft"
                            top_delta="0"
                            min_val="0"
                            max_val="1"
                            name="ice_level"
                            width="207"
                            can_edit_text="true"/>
                </layout_panel>            
                <layout_panel
                        name="right_lp"
                        border="false"
                        bevel_style="in"
                        auto_resize="true"
                        user_resize="false"
                        visible="true"
                        min_width="225">
                    <text
                            name="density_multiplier_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="10"
                            width="100">
                        밀도 승수:
                    </text>
                    <slider
                            decimal_digits="4"
                            follows="left|top"
                            height="16"
                            increment="0.0001"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0.0001"
                            max_val="2"
                            name="density_multip"
                            top_delta="0"
                            width="219"
                            can_edit_text="true"/>
                    <text
                            name="distance_multiplier_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        거리 승수:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0.8"
                            layout="topleft"
                            left_pad="5"
                            min_val="0.05"
                            max_val="1000"
                            name="distance_multip"
                            top_delta="0"
                            width="219"
                            can_edit_text="true"/>
                    <text
                            name="maximum_altitude_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        최대 고도:
                    </text>
                    <slider
                            decimal_digits="1"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            min_val="0"
                            max_val="10000"
                            name="max_alt"
                            top_delta="0"
                            width="219"
                            can_edit_text="true"/>
                            <text
                            name="scene_gamma_label"
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="5"
                            top_pad="15"
                            width="100">
                        신 감마:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_pad="5"
                            max_val="20"
                            name="scene_gamma"
                            top_delta="0"
                            width="207"
                            can_edit_text="true"/>
                </layout_panel>            
            </layout_stack>                
        </layout_panel>
    </layout_stack>
</panel>
