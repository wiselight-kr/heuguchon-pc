<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<context_menu
 layout="topleft"
 name="Namelist Popup">
    <menu_item_call
     label="IM 전송..."
     layout="topleft"
     name="send_im">
        <menu_item_call.on_click
         function="Namelist.SendIM"/>
    </menu_item_call>
    <menu_item_call
     label="집합에 추가..."
     layout="topleft"
     name="Add to Set">
        <menu_item_call.on_click
         function="Namelist.AddToContactSet"/>
    </menu_item_call>
    <menu_item_call
     label="순간이동 제공"
     layout="topleft"
     name="offer_teleport">
        <menu_item_call.on_click
         function="Namelist.OfferTeleport"/>
        <menu_item_call.on_enable
         function="Namelist.EnableItem"
         parameter="offer_teleport"/>
    </menu_item_call>
    <menu_item_call
     label="친구 삭제..."
     layout="topleft"
     name="remove_friend">
        <menu_item_call.on_click
         function="Namelist.RemoveFriend"/>
        <menu_item_call.on_enable
         function="Namelist.EnableItem"
         parameter="remove_friend"/>
    </menu_item_call>
</context_menu>
