<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 positioning="cascading"
 save_rect="true"
 legacy_header_height="18"
 can_resize="true"
 height="465"
 name="gestures"
 help_topic="gestures"
 title="제스쳐"
 background_visible="true"
 label="Places"
 layout="topleft"
 min_height="180"
 min_width="200"
 width="313">
    <floater.string
     name="loading">
        로딩중...
    </floater.string>
    <floater.string
     name="playing">
        (재생중)
    </floater.string>
    <!-- It's used to build new name for gesture created by "Copy" menu item -->
    <floater.string
     name="copy_name">[COPY_NAME]의 복사본</floater.string>
    <scroll_list
     bottom_delta="400"
     draw_heading="true"
     follows="all"
     layout="topleft"
     left="0"
     multi_select="true"
     top="20"
     name="gesture_list">
        <scroll_list.columns
         label="이름"
         name="name"
         width="153" />
        <scroll_list.columns
         label="채팅"
         name="trigger"
         width="80" />
       <scroll_list.columns
         label=""
         name="key"
         width="-1" />
        <scroll_list.columns
         label="키"
         name="shortcut"
         width="80" />
    </scroll_list>
              <panel
             background_visible="true"
             bevel_style="none"
             top_pad="0"
             follows="left|right|bottom"
             height="30"
             label="bottom_panel"
             layout="topleft"
             left="0"
             name="bottom_panel"
             width="313">
              <menu_button
               follows="bottom|left"
               height="18"
               image_disabled="OptionsMenu_Disabled"
               image_selected="OptionsMenu_Press"
               image_unselected="OptionsMenu_Off"
               layout="topleft"
               left="10"
               menu_filename="menu_gesture_gear.xml"
               name="gear_btn"
               top="5"
               tool_tip="더 많은 옵션"
               width="18" />
              <button
                 follows="bottom|left"
                 font="SansSerifBigBold"
                 height="18"
                 image_selected="AddItem_Press"
                 image_unselected="AddItem_Off"
                 image_disabled="AddItem_Disabled"
                 layout="topleft"
                 left_pad="5"
                 name="new_gesture_btn"
                 tool_tip="새 제스쳐 만들기"
                 top_delta="0"
                 width="18" />
              <button
                 follows="bottom|left"
                 font="SansSerifBigBold"
                 height="10"
                 image_hover_selected="Activate_Checkmark"
                 image_selected="Activate_Checkmark"
                 image_unselected="Activate_Checkmark"
                 layout="topleft"
                 left_pad="5"
                 name="activate_btn"
                 tool_tip="선택된 제스쳐 활성화/비활성화"
                 top="10"
                 width="10" />
              <check_box
                 control_name="FSShowOnlyActiveGestures"
                 height="18"
                 label="Active only"
                 layout="topleft"
                 follows="bottom|left"
                 left_pad="25"
                 top="5"
                 name="FSShowOnlyActiveGestures"
                 width="100">
                   <check_box.commit_callback
                    function="Gesture.Action.RefreshList" />
              </check_box>
              <button
                 follows="bottom|right"
                 font="SansSerifBigBold"
                 height="18"
                 image_selected="TrashItem_Press"
                 image_unselected="TrashItem_Off"
                 image_disabled="TrashItem_Disabled"
                 layout="topleft"
                 name="del_btn"
                 right="-5"
                 tool_tip="이 제스쳐 삭제"
                 top_delta="0"
                 width="18" />
            </panel>
    <button
     follows="left|bottom"
     height="23"
     label="수정"
     tool_tip="선택한 제스처를 편집할 수 있는 창 열기."
     layout="topleft"
     left="6"
     name="edit_btn"
     top_pad="5"
     width="83" />
    <button
     follows="left|bottom"
     height="23"
     label="재생"
     tool_tip="선택한 제스처 실행."
     layout="topleft"
     left_pad="6"
     name="play_btn"
     top_delta="0"
     width="83" />
    <button
     follows="left|bottom"
     height="23"
     label="정지"
     layout="topleft"
     left_delta="0"
     name="stop_btn"
     top_delta="0"
     width="83" />
</floater>
