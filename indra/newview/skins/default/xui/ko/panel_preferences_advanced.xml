<?xml version="1.0" encoding="UTF-8"?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="고급"
 name="advanced">
 <panel.string
     name="aspect_ratio_text">
        [NUM]:[DEN]
    </panel.string>
    <panel.string
     name="middle_mouse">
        Middle Mouse
    </panel.string>
    <check_box
     control_name="AllowMultipleViewers"
     follows="top|left"
     height="15"
     label="다중 뷰어 허용 (안정성 및 성능이 저하될 수 있음)"
     layout="topleft"
     left="30"
     name="allow_multiple_viewer_check"
     top_pad="20"
     width="237"/>
    <check_box
     control_name="ForceShowGrid"
     follows="top|left"
     height="15"
     label="다른 그리드에 로그인 허용 (모든 그리드가 firestorm을 허용하는 것은 아님)"
     layout="topleft"
     left="30"
     name="show_grid_selection_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="UseDebugMenus"
     follows="top|left"
     height="15"
     label="고급메뉴 보기 (자기부담으로 사용!)"
     layout="topleft"
     left="30"
     name="show_advanced_menu_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="QAMode"
     follows="top|left"
     height="15"
     label="개발자메뉴 보기 (자기부담으로 사용!)"
     layout="topleft"
     left="30"
     name="show_develop_menu_check"
     top_pad="5"
     width="237"/>

    <check_box
     control_name="FSDisableWMIProbing"
     follows="top|left"
     height="15"
     label="윈도우즈 시스템에서 WMI 검색을 통해 VRAM 탐지 사용 안 함"
     layout="topleft"
     left="30"
     name="FSDisableWMIProbing"
     top_pad="10"
     width="237"/>
    <!-- Ansa: Timesteps are currently disabled in the viewer
    <check_box
     control_name="UseAnimationTimeSteps"
     tool_tip="This setting may reduce render load for distant avatars but, may also cause their animations to play at incorrect speeds"
     follows="top|left"
     height="15"
     label="Enable the use of animation timesteps (experimental)"
     layout="topleft"
     left="30"
     name="UseAnimationTimeSteps"
     top_pad="5"
     width="237"/>
    -->
    <text
     name="BackgroundYieldTimeText"
     follows="top|left"
     layout="topleft"
     left="30"
     right="-1"
     word_wrap="true"
     top_pad="25"
     height="100">
        Amount of time, in milliseconds, to yield every frame to other applications when [APP_NAME] is not the foreground window (default: 40; 1 second = 1000 milliseconds):
    </text>
    <slider
     can_edit_text="true"
     control_name="BackgroundYieldTime"
     decimal_digits="0"
     follows="top|left"
     layout="topleft"
     height="15"
     increment="10"
     initial_value="40"
     left="30"
     max_val="1000"
     min_val="0"
     name="BackgroundYieldTime"
     top_delta="40"
     width="250" />

    <button
     top="40"
     enabled="true"
     follows="left|top"
     halign="center"
     height="25"
     label="모든 설정 초기화"
     label_selected="모든 설정 초기화..."
     left="30"
     mouse_opaque="true"
     name="clear_settings"
     scale_image="true"
     width="250" >
        <button.commit_callback
         function="Pref.ClearSettings" />
    </button>

 </panel>
