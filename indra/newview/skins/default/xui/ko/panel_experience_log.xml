<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<panel
  name="panel_experience_log"
  layout="topleft"
  top="3"
  left="3"
  width="500"
  height="300"
  label="이벤트"
  follows="all">
  <string
    name="no_events"
    value="이벤트 없음."/>
  <string
    name="loading"
    value="로딩중..."/>
  <layout_stack
    name="ls1"
    layout="topleft"
    top="0"
    left="4" 
    right="-1"
    bottom="-4"
    orientation="vertical"
    follows="all">
    <layout_panel
      name="list panel"
      layout="topleft"
      top="0"
      left="1"
      right="-1"
      height="250"
      follows="all">
      <scroll_list
        draw_heading="true"
        left="1"
        right="-86"
        height="250"
        follows="all"
        name="experience_log_list">
        <columns
          width="100"
          user_resize="true"
          name="time"
          label="시간"/>
        <columns
          width="100"
          user_resize="true"
          name="event"
          label="이벤트"/>
        <columns
          width="100"
          user_resize="true"
          name="experience_name"
          label="경험"/>
        <columns
          width="100"
          user_resize="true"
          name="object_name"
          label="개체"/>
      </scroll_list>
      
      <button
        layout="topleft"
        follows="top|right"
        name="btn_notify"
        label="알리기"
        top_pad="-225"
        left_pad="5"
        right="-1"
        enabled="false"/>
      
      <button
        layout="topleft"
        follows="top|right"
        name="btn_profile_xp"
        label="프로필"
        top_pad="5"
        right="-1"
        enabled="false"/>

      <button
        layout="topleft"
        follows="top|right"
        name="btn_report_xp"
        label="신고"
        top_pad="5"
        right="-1"
        enabled="false"/>
    </layout_panel>
    <layout_panel
      layout="topleft"
      top="0"
      left="1"
      right="-1"
      height="30"
      min_height="30"
      follows="all"
      name="button_panel"
      visible="true">
      <check_box
        top="0"
        follows="top|left"
        height="26"
        label="모든 이벤트 날 알림"
        width="140"
        name="notify_all" />

      <spinner
        top="5"
        control_name="LogDays"
        decimal_digits="0"
        follows="left|top"
        height="23"
        increment="1"
        initial_value="7"
        label_width="30"
        layout="topleft"
        left_pad="5"
        max_val="14"
        min_val="0"
        name="logsizespinner"
        width="40" />
      <button
        top="5"
        left="280"
        layout="topleft"
        follows="top|left"
        name="btn_clear"
        label="지우기"
        width="80"
        enabled="false"/>
      <button
        top="5"
        layout="topleft"
        left_pad="5"
        width="20"
        follows="top|left"
        name="btn_prev"
        label="&lt;"
        enabled="false"/>
      <button
        top="5"
        layout="topleft"
        follows="top|left"
        name="btn_next"
        label="&gt;"
        left_pad="5"
        width="20"
        enabled="false"/>
    </layout_panel>
  </layout_stack>
</panel>
