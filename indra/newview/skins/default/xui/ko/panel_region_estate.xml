<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="top|left"
 height="450"
 help_topic="panel_region_estate_tab"
 label="사유지"
 layout="topleft"
 left="0"
 name="Estate"
 top="320"
 width="485">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="32"
     layout="topleft"
     left="10"
     name="estate_help_text"
     top="14"
     word_wrap="true"
     >
        이 탭의 설정을 변경하면 자산의 모든 지역에 영향을 미칩니다.
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="20"
     layout="topleft"
     right="160"
     name="estate_text"
     top_pad="2"
     halign="right"
     width="140">
        사유지:
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="20"
     layout="topleft"
     top_delta="0"
     name="estate_name"
     left_pad="6"
     width="150">
        (알 수 없음)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="20"
     layout="topleft"
     right="160"
     name="owner_text"
     top_pad="6"
     halign="right"
     width="150">
        사유지 소유자:
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="20"
     layout="topleft"
     top_delta="0"
     name="estate_owner"
     left_pad="6"
     use_ellipses="true"
     width="290">
        (알 수 없음)
    </text>

    <view_border
     bevel_style="none"
     follows="top|left"
     height="185"
     layout="topleft"
     left="6"
     top_pad="5"
     width="470" />
    <radio_group
     height="32"
     layout="topleft"
     name="externally_visible_radio"
     top_delta="5"
     left="10"
     width="200">
        <radio_item
         height="16"
         label="액세스 탭에 나열된 거주자 및 그룹만 허용"
         layout="topleft"
         name="estate_restricted_access" />
        <radio_item
         height="16"
         label="누구나 방문할 수 있음"
         layout="topleft"
         name="estate_public_access" />
    </radio_group>
    <check_box
     follows="top|left"
     height="18"
     label="18+"
     layout="topleft"
     left_delta="20"
     name="limit_age_verified"
     tool_tip="거주자는 18세 이상이어야 이 사유지에 접근할 수 있습니다. 자세한 내용은 [SUPPORT_SITE]를 참조하십시오."
     top_delta="40"
     width="278" />
    <check_box
     follows="top|left"
     height="18"
     label="파일에 결제 정보가 있어야 합니다"
     layout="topleft"
     left_delta="0"
     name="limit_payment"
     tool_tip="거주자가 이 숙박시설에 액세스하려면 지불 정보가 파일에 있어야 합니다. 자세한 내용은 [SUPPORT_SITE]를 참조하십시오."
     top_pad="2"
     width="278" />
    <check_box
     height="18"
     label="구획 소유자는 더 제한적일 수 있습니다."
     layout="topleft"
     left="10"
     name="parcel_access_override"
     top_pad="2"
     width="240" />
    <check_box
     height="18"
     label="음성 채팅 허용"
     layout="topleft"
     left="20"
     name="voice_chat_check"
     top_pad="2"
     width="240" />
    <check_box
     height="18"
     label="직접 순간이동 허용"
     layout="topleft"
     left_delta="0"
     name="allow_direct_teleport"
     top_pad="2"
     width="240" />
    <button
     enabled="false"
     follows="left|top"
     height="23"
     label="적용"
     layout="topleft"
     name="apply_btn"
     top_pad="10"
     left_delta="0"
     width="97" />

    <button
     follows="left|top"
     height="23"
     label="부동산에 메시지 보내기..."
     layout="topleft"
     left="3"
     name="message_estate_btn"
     top_pad="15"
     width="235" />
    <button
     follows="left|top"
     height="23"
     label="거주자를 사유지에서 쫓아내기..."
     layout="topleft"
     left="247"
     name="kick_user_from_estate_btn"
     top_delta="0"
     width="235" />

</panel>
