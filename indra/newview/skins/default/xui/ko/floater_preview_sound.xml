<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="85"
 layout="topleft"
 name="preview_sound"
 help_topic="preview_sound"
 positioning="centered"
 save_rect="true"
 width="280">
    <floater.string
     name="Title">
        소리: [NAME]
    </floater.string>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="19"
     layout="topleft"
     left="10"
     top="22"
     name="desc txt"
     width="90">
        묘사:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     follows="left|top|right"
     font="SansSerif"
     height="19"
     layout="topleft"
     left_pad="0"
     max_length_bytes="127"
     name="desc"
     width="170" />
    <button
     follows="left|top"
     height="22"
     label="인월드 재생"
     label_selected="Play Inworld"
     layout="topleft"
     name="Sound play btn"
     sound_flags="0"
     top="55"
     left="10"
     tool_tip="다른 사람이 들을 수 있도록 이 소리 재생"
     width="125" />
    <button
     follows="left|top"
     height="22"
     label="로컬 재생"
     label_selected="Play Locally"
     layout="topleft"
     name="Sound audition btn"
     sound_flags="0"
     tool_tip="이 소리를 당신만 들을 수 있도록 재생합니다"
     left_pad="10"
     width="125" />

</floater>
