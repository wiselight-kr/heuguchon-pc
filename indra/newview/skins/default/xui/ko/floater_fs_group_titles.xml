<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
 name="group_titles"
 help_topic="fs_group_titles"
 title="그룹 제목"
 width="250"
 height="300"
 min_width="250"
 min_height="150"
 save_rect="true"
 single_instance="true"
 can_resize="true"
 can_minimize="true"
 can_close="true"
 can_drag_on_left="false">
 
	<floater.string name="NoGroupTitle" value="&lt;그룹 제목 없음&gt;"/>

	<filter_editor
	 follows="left|top|right"
	 height="23"
	 layout="topleft"
	 left="5"
	 label="필터 그룹 제목"
	 max_length_bytes="20"
	 name="filter_input"
	 top="5"
	 right="-5" />

	<scroll_list
	 name="title_list"
	 follows="all"
	 draw_heading="true"
	 layout="topleft"
	 right="-5"
	 left="5"
	 height="238">
		<column
		 name="grouptitle"
		 sort_column="title_sort_column"
		 label="제목"/>
		<column
		 name="groupname"
		 sort_column="name_sort_column"
		 label="그룹"/>
		<column
		 name="role_id"
		 width="-1"/>
		<column
		 name="group_id"
		 width="-1"/>
		<column
		 name="title_sort_column"
		 width="-1"/>
		<column
		 name="name_sort_column"
		 width="-1"/>
	</scroll_list>
	<button
	 image_overlay="Refresh_Off"
	 tool_tip="사용 가능한 그룹 제목 목록 새로 고침"
	 name="btnRefresh"
	 height="22"
	 width="25"
	 left="5"
	 follows="left|bottom"/>
	<button
	 name="btnInfo"
	 label="정보"
	 tool_tip="선택한 제목 그룹에 대한 정보 표시"
	 height="22"
	 width="100"
	 right="-110"
	 top_delta="0"
	 follows="right|bottom"/>
	<button
	 name="btnActivate"
	 label="활성화"
	 tool_tip="선택한 그룹 제목 활성화"
	 height="22"
	 width="100"
	 right="-4"
	 top_delta="0"
	 follows="right|bottom"/>
</floater>
