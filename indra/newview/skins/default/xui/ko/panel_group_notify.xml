<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_visible="true"
 height="260"
 label="인스턴스 메세지"
 layout="topleft"
 left="0"
 name="panel_group_notify"
 top="0"
 width="400">
    <string
     name="message_max_lines_count"
     value="10" />
    <string
     name="subject_font"
     value="SANSSERIF_BIG" />
    <string
     name="date_font"
     value="SANSSERIF" />
    <text
     follows="left|top|right"
     font="SansSerifHuge"
     height="20"
     layout="topleft"
     left="10"
     name="group_notice"
     text_color="GroupNotifyTextColor"
     top_pad="5"
     use_ellipses="true"
     value="그룹 알림"
     width="380"/>
    <text
     follows="left|top|right"
     font="SansSerif"
     height="20"
     icon_positioning="none"
     layout="topleft"
     left="10"
     name="title"
     text_color="GroupNotifyTextColor"
     top_pad="5"
     use_ellipses="true"
     width="380"
     value="보낸 사람 이름, 그룹 이름별로 전송됨"/>
    <group_icon
     follows="left|top"
     height="64"
     image_name="Generic_Group"
     layout="topleft"
     left="5"
     mouse_opaque="true"
     name="group_icon"
     top="50"
     width="64" />
    <simple_text_editor
     parse_urls="true"
     enabled="true"
     follows="all"
     bottom="-58"
     layout="topleft"
     left_pad="5"
     max_length="67108864"
     name="message"
     parse_highlights="true"
     read_only="true"
     right="-10"
     text_color="GroupNotifyTextColor"
     top="50"
     type="string"
     use_ellipses="true"
     value="메세지"
     word_wrap="true" >
    </simple_text_editor>
    <icon
     bottom="-36"
     follows="left|bottom|right"
     height="15"
     layout="topleft"
     left_delta="0"
     mouse_opaque="true"
     name="attachment_icon"
     width="15" />
    <text
     bottom_delta="0"
     follows="left|bottom|right"
     font="SansSerif"
     height="15"
     layout="topleft"
     left_pad="5"
     name="attachment"
     parse_urls="false"
     right="-10"
     text_color="GroupNotifyTextColor"
     value="첨부파일"
     use_ellipses="true" />
    <button
     bottom="-10"
     follows="bottom|right"
     height="20"
     label="OK"
     layout="topleft"
     left="10"
     name="btn_ok"
     width="70" />
    <button
     bottom="-10"
     follows="bottom|right"
     height="20"
     label="그룹 알림"
     layout="topleft"
     left_pad="10"
     name="btn_notices"
     width="100" />
    <button
     bottom="-10"
     follows="bottom|right"
     height="20"
     label="그룹 채팅"
     layout="topleft"
     left_pad="10"
     name="btn_groupchat"
     width="100" />
</panel>
